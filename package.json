{
  "name": "svelte-adapter-bun",
  "version": "1.0.0",
  "description": "Adapter for SvelteKit apps that generates a standalone Bun.js server.",
  "keywords": [
    "adapter",
    "deploy",
    "svelte",
    "sveltekit",
    "bun"
  ],
  "author": {
    "name": "Volodymyr Palamar",
    "url": "https://gornostay25.dev",
    "email": "me@gornostay25.dev"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gornostay25/svelte-adapter-bun.git"
  },
  "bugs": {
    "url": "https://github.com/gornostay25/svelte-adapter-bun/issues"
  },
  "homepage": "https://github.com/gornostay25/svelte-adapter-bun#readme",
  "scripts": {
    "prepare": "husky",
    "build": "bun run scripts/build.ts",
    "format": "prettier --write ."
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "import": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "types": "index.d.ts",
  "files": [
    "dist",
    "index.d.ts",
    "ambient.d.ts"
  ],
  "devDependencies": {
    "@types/bun": "latest",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "prettier": "3.6.2",
    "sirv": "file:packages/sirv"
  },
  "peerDependencies": {
    "typescript": "^5",
    "@sveltejs/kit": "^2.4.0"
  },
  "dependencies": {
    "rolldown": "^1.0.0-beta.38"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,md}": [
      "prettier --write"
    ]
  }
}
